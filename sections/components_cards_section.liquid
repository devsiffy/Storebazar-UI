</style>

<section class="components-cards">
  <div class="components-cards__container">
    <!-- Section Header -->
    <div class="components-cards__header">
      {% if section.settings.show_badge %}
        <div class="components-cards__badge">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="3" y="3" width="7" height="7"></rect>
            <rect x="14" y="3" width="7" height="7"></rect>
            <rect x="14" y="14" width="7" height="7"></rect>
            <rect x="3" y="14" width="7" height="7"></rect>
          </svg>
          {{ section.settings.badge_text }}
        </div>
      {% endif %}

      {% if section.settings.title != blank %}
        <h2 class="components-cards__title">{{ section.settings.title }}</h2>
      {% endif %}

      {% if section.settings.description != blank %}
        <p class="components-cards__description">{{ section.settings.description }}</p>
      {% endif %}
    </div>

    <!-- Components Grid -->
    <div class="components-cards__grid">
      {% assign card_limit_desktop = 8 %}
      {% assign card_limit_mobile = 4 %}
      
      {% for block in section.blocks limit: card_limit_desktop %}
        <a href="{{ block.settings.link }}" class="component-card" {{ block.shopify_attributes }} data-mobile-limit="{{ card_limit_mobile }}">
          <div class="component-card__arrow">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round">
              <line x1="7" y1="17" x2="17" y2="7"></line>
              <polyline points="7 7 17 7 17 17"></polyline>
            </svg>
          </div>

          <div class="component-card__icon-wrapper">
            <div class="component-card__icon">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                <line x1="3" y1="9" x2="21" y2="9"></line>
                <line x1="9" y1="21" x2="9" y2="9"></line>
              </svg>
            </div>
          </div>

          <div class="component-card__content">
            <h3 class="component-card__title">{{ block.settings.title }}</h3>
          </div>
        </a>
      {% endfor %}
    </div>

    <!-- Browse Button -->
    {% if section.settings.show_button %}
      <div class="components-cards__footer">
        <a href="{{ section.settings.button_url }}" class="components-cards__button">
          {{ section.settings.button_text }}
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
            <line x1="5" y1="12" x2="19" y2="12"></line>
            <polyline points="12 5 19 12 12 19"></polyline>
          </svg>
        </a>
      </div>
    {% endif %}
  </div>
</section>

<script>
  // Hide cards beyond limit on mobile
  (function() {
    function handleCardVisibility() {
      const cards = document.querySelectorAll('.component-card');
      const isMobile = window.innerWidth <= 480;
      const limit = isMobile ? 4 : 8;
      
      cards.forEach((card, index) => {
        if (index >= limit) {
          card.style.display = 'none';
        } else {
          card.style.display = 'flex';
        }
      });
    }

    handleCardVisibility();
    window.addEventListener('resize', handleCardVisibility);
  })();
</script>

