<style>
  .components-cards {
    width: 100%;
    position: relative;
    background: #ffffff;
    padding: 5rem 0;
    border-bottom: 1px solid rgba(0, 0, 0, 0.08);
  }

  .components-cards__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    width: 100%;
  }

  .components-cards__header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .components-cards__badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(0, 0, 0, 0.04);
    border: 1px solid rgba(0, 0, 0, 0.08);
    border-radius: 100px;
    padding: 0.5rem 1rem;
    font-family: var(--dm-sans-font);
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-text);
    letter-spacing: -0.01em;
    margin-bottom: 1rem;
  }

  .components-cards__badge svg {
    width: 16px;
    height: 16px;
    stroke: var(--color-text);
  }

  .components-cards__title {
    font-family: var(--dm-sans-font);
    font-size: 2.5rem;
    font-weight: 800;
    line-height: 1.2;
    color: var(--color-gray-900);
    margin: 0 0 1rem;
    letter-spacing: -0.02em;
  }

  .components-cards__description {
    font-family: var(--dm-sans-font);
    font-size: 1.125rem;
    line-height: 1.6;
    color: var(--color-text-muted);
    margin: 0 auto;
    max-width: 700px;
    letter-spacing: -0.01em;
  }

  .components-cards__grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
  }

  .component-card {
    position: relative;
    background: #ffffff;
    border: 1.5px solid rgba(0, 0, 0, 0.08);
    border-radius: 16px;
    padding: 2.5rem 2rem;
    text-decoration: none;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 1.25rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
    overflow: hidden;
  }

  .component-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.02);
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: 0;
  }

  .component-card:hover::before {
    opacity: 1;
  }

  .component-card:hover {
    border-color: rgba(0, 0, 0, 0.2);
  }

  .component-card__icon-wrapper {
    position: relative;
    z-index: 1;
    transition: all 0.3s ease;
  }

  .component-card__icon {
    width: 64px;
    height: 64px;
    border-radius: 16px;
    background: rgba(0, 0, 0, 0.04);
    border: 1px solid rgba(0, 0, 0, 0.08);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
  }

  .component-card:hover .component-card__icon {
    background: rgba(0, 0, 0, 0.06);
    border-color: rgba(0, 0, 0, 0.15);
  }

  .component-card__icon svg {
    width: 32px;
    height: 32px;
    stroke: var(--color-gray-900);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .component-card:hover .component-card__icon svg {
    stroke: #000000;
  }

  .component-card__content {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .component-card__title {
    font-family: var(--dm-sans-font);
    font-size: 1.0625rem;
    font-weight: 600;
    line-height: 1.4;
    color: var(--color-gray-900);
    margin: 0;
    letter-spacing: -0.01em;
    transition: color 0.3s ease;
  }

  .component-card:hover .component-card__title {
    color: #000000;
  }

  .component-card__arrow {
    position: absolute;
    top: 1.25rem;
    right: 1.25rem;
    width: 24px;
    height: 24px;
    border-radius: 8px;
    background: rgba(0, 0, 0, 0.04);
    border: 1px solid rgba(0, 0, 0, 0.08);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: 2;
  }

  .component-card__arrow svg {
    width: 14px;
    height: 14px;
    stroke: var(--color-gray-900);
    stroke-width: 2.5;
  }

  .component-card:hover .component-card__arrow {
    opacity: 1;
    background: rgba(0, 0, 0, 0.06);
    border-color: rgba(0, 0, 0, 0.12);
  }

  .components-cards__footer {
    display: flex;
    justify-content: center;
    margin-top: 3rem;
  }

  .components-cards__button {
    font-family: var(--dm-sans-font);
    font-size: 1rem;
    font-weight: 600;
    color: #ffffff;
    background: linear-gradient(135deg, #000000 0%, #2d3538 100%);
    padding: 0.875rem 2.5rem;
    border: none;
    border-radius: 10px;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    white-space: nowrap;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    position: relative;
    overflow: hidden;
  }

  .components-cards__button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s ease;
  }

  .components-cards__button:hover::before {
    left: 100%;
  }

  .components-cards__button:hover {
    background: linear-gradient(135deg, #1a1a1a 0%, #3d4548 100%);
  }

  .components-cards__button:active {
    background: linear-gradient(135deg, #000000 0%, #2d3538 100%);
  }

  .components-cards__button svg {
    width: 18px;
    height: 18px;
  }

  /* Desktop Large */
  @media screen and (max-width: 1440px) {
    .components-cards__title {
      font-size: 2.25rem;
    }

    .components-cards__description {
      font-size: 1.0625rem;
    }
  }

  /* Desktop */
  @media screen and (max-width: 1200px) {
    .components-cards {
      padding: 4.5rem 0;
    }

    .components-cards__title {
      font-size: 2rem;
    }

    .components-cards__description {
      font-size: 1rem;
    }

    .component-card {
      padding: 2.25rem 1.75rem;
    }

    .component-card__icon {
      width: 60px;
      height: 60px;
    }

    .component-card__icon svg {
      width: 30px;
      height: 30px;
    }
  }

  /* Tablet */
  @media screen and (max-width: 990px) {
    .components-cards {
      padding: 4rem 0;
    }

    .components-cards__container {
      padding: 0 1.5rem;
    }

    .components-cards__header {
      margin-bottom: 2.5rem;
    }

    .components-cards__title {
      font-size: 1.875rem;
    }

    .components-cards__description {
      font-size: 0.9375rem;
    }

    .components-cards__grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 1.25rem;
    }

    .component-card {
      padding: 2rem 1.5rem;
    }

    .component-card__icon {
      width: 56px;
      height: 56px;
    }

    .component-card__icon svg {
      width: 28px;
      height: 28px;
    }

    .component-card__title {
      font-size: 1rem;
    }

    .components-cards__footer {
      margin-top: 2.5rem;
    }
  }

  /* Tablet Small */
  @media screen and (max-width: 768px) {
    .components-cards {
      padding: 3.5rem 0;
    }

    .components-cards__header {
      margin-bottom: 2rem;
    }

    .components-cards__title {
      font-size: 1.75rem;
    }

    .components-cards__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }

    .component-card {
      padding: 1.75rem 1.25rem;
    }

    .component-card__icon {
      width: 52px;
      height: 52px;
      border-radius: 14px;
    }

    .component-card__icon svg {
      width: 26px;
      height: 26px;
    }

    .component-card__title {
      font-size: 0.9375rem;
    }

    .component-card__arrow {
      width: 22px;
      height: 22px;
      top: 1rem;
      right: 1rem;
    }

    .component-card__arrow svg {
      width: 12px;
      height: 12px;
    }

    .components-cards__footer {
      margin-top: 2rem;
    }
  }

  /* Mobile */
  @media screen and (max-width: 480px) {
    .components-cards {
      padding: 3rem 0;
    }

    .components-cards__container {
      padding: 0 1rem;
    }

    .components-cards__header {
      margin-bottom: 1.75rem;
    }

    .components-cards__badge {
      font-size: 0.75rem;
      padding: 0.4375rem 0.875rem;
    }

    .components-cards__badge svg {
      width: 14px;
      height: 14px;
    }

    .components-cards__title {
      font-size: 1.5rem;
    }

    .components-cards__description {
      font-size: 0.875rem;
    }

    .components-cards__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 0.875rem;
    }

    .component-card {
      padding: 1.5rem 1rem;
      border-radius: 14px;
    }

    .component-card__icon {
      width: 48px;
      height: 48px;
      border-radius: 12px;
    }

    .component-card__icon svg {
      width: 24px;
      height: 24px;
    }

    .component-card__title {
      font-size: 0.875rem;
    }

    .component-card__arrow {
      width: 20px;
      height: 20px;
      top: 0.875rem;
      right: 0.875rem;
    }

    .component-card__arrow svg {
      width: 11px;
      height: 11px;
    }

    .components-cards__footer {
      margin-top: 1.5rem;
    }

    .components-cards__button {
      padding: 0.6875rem 1.75rem;
      font-size: 0.875rem;
    }

    .components-cards__button svg {
      width: 16px;
      height: 16px;
    }
  }

  /* Small Mobile */
  @media screen and (max-width: 375px) {
    .components-cards {
      padding: 2.5rem 0;
    }

    .components-cards__title {
      font-size: 1.375rem;
    }

    .components-cards__description {
      font-size: 0.8125rem;
    }

    .component-card {
      padding: 1.25rem 1rem;
    }

    .component-card__icon {
