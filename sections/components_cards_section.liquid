    }
  }

  /* Very Small Screens */
  @media screen and (max-width: 320px) {
    .components-cards {
      padding: 2rem 0;
    }

    .components-cards__container {
      padding: 0 0.875rem;
    }

    .components-cards__title {
      font-size: 1.25rem;
    }

    .components-cards__description {
      font-size: 0.75rem;
    }

    .component-card {
      padding: 1rem 0.875rem;
    }

