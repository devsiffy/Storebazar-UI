<style>
  .hero {
    width: 100%;
    position: relative;
    overflow: hidden;
    background: #ffffff;
    min-height: calc(100vh - 82px);
    display: flex;
    align-items: center;
    justify-content: center;
    border-bottom: 1px solid rgba(0, 0, 0, 0.08);
  }

  .hero__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 4rem 2rem;
    width: 100%;
  }

  .hero__content {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 2rem;
    max-width: 800px;
    margin: 0 auto;
  }

  .hero__badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(0, 0, 0, 0.04);
    border: 1px solid rgba(0, 0, 0, 0.12);
    border-radius: 100px;
    padding: 0.5rem 1rem;
    font-family: var(--dm-sans-font);
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-gray-900);
    letter-spacing: -0.01em;
  }

  .hero__badge svg {
    width: 16px;
    height: 16px;
    fill: var(--color-gray-900);
  }

  .hero__heading {
    font-family: var(--dm-sans-font);
    font-size: 4rem;
    font-weight: 800;
    line-height: 1.15;
    color: var(--color-gray-900);
    margin: 0;
    letter-spacing: -0.03em;
    max-width: 650px;
  }

  .hero__description {
    font-family: var(--dm-sans-font);
    font-size: 1.125rem;
    line-height: 1.65;
    color: var(--color-text-muted);
    margin: 0;
    letter-spacing: -0.01em;
    max-width: 640px;
  }

  .hero__cta-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    margin-top: 0.5rem;
  }

  .hero__button {
    font-family: var(--dm-sans-font);
    font-size: 1rem;
    font-weight: 600;
    color: #ffffff;
    background: linear-gradient(135deg, #000000 0%, #2d3538 100%);
    padding: 0.875rem 2.5rem;
    border: none;
    border-radius: 10px;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    white-space: nowrap;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    position: relative;
    overflow: hidden;
  }

  .hero__button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s ease;
  }

  .hero__button:hover::before {
    left: 100%;
  }

  .hero__button:hover {
    background: linear-gradient(135deg, #1a1a1a 0%, #3d4548 100%);
  }

  .hero__button:active {
    background: linear-gradient(135deg, #000000 0%, #2d3538 100%);
  }

  .hero__button svg {
    width: 18px;
    height: 18px;
  }

  .hero__cta-note {
    font-family: var(--dm-sans-font);
    font-size: 0.8125rem;
    color: var(--color-text-muted);
    letter-spacing: -0.01em;
  }

  /* Desktop Large */
  @media screen and (max-width: 1440px) {
    .hero__heading {
      font-size: 3.25rem;
      max-width: 600px;
    }

    .hero__description {
      font-size: 1.0625rem;
      max-width: 580px;
    }
  }

  /* Desktop */
  @media screen and (max-width: 1200px) {
    .hero {
      min-height: calc(100vh - 76px);
    }

    .hero__heading {
      font-size: 3rem;
      max-width: 550px;
    }

    .hero__description {
      font-size: 1rem;
      max-width: 540px;
    }
  }

  /* Tablet */
  @media screen and (max-width: 990px) {
    .hero {
      min-height: auto;
      padding: 4rem 0;
    }

    .hero__container {
      padding: 3rem 1.5rem;
    }

    .hero__content {
      gap: 1.75rem;
    }

    .hero__heading {
      font-size: 2.5rem;
      max-width: 500px;
    }

    .hero__description {
      font-size: 0.9375rem;
      max-width: 480px;
    }

    .hero__button {
      padding: 0.8125rem 2.25rem;
      font-size: 0.9375rem;
    }
  }

  /* Tablet Small */
  @media screen and (max-width: 768px) {
    .hero__container {
      padding: 2.5rem 1.5rem;
    }

    .hero__content {
      gap: 1.5rem;
    }

    .hero__heading {
      font-size: 2.25rem;
      max-width: 450px;
    }

    .hero__description {
      font-size: 0.9375rem;
      line-height: 1.6;
      max-width: 420px;
    }

    .hero__button {
      padding: 0.75rem 2rem;
      font-size: 0.9375rem;
    }

    .hero__button svg {
      width: 16px;
      height: 16px;
    }
  }

  /* Mobile Landscape */
  @media screen and (max-width: 768px) and (orientation: landscape) {
    .hero {
      min-height: auto;
      padding: 3rem 0;
    }

    .hero__container {
      padding: 2rem 1.5rem;
    }

    .hero__content {
      gap: 1.25rem;
    }

    .hero__heading {
      font-size: 2rem;
      max-width: 400px;
    }

    .hero__description {
      font-size: 0.875rem;
      max-width: 380px;
    }

    .hero__button {
      padding: 0.6875rem 1.75rem;
      font-size: 0.875rem;
    }
  }

  /* Mobile */
  @media screen and (max-width: 480px) {
    .hero {
      min-height: auto;
      padding: 3rem 0;
    }

    .hero__container {
      padding: 2rem 1rem;
    }

    .hero__content {
      gap: 1.5rem;
    }

    .hero__badge {
      font-size: 0.75rem;
      padding: 0.4375rem 0.875rem;
    }

    .hero__badge svg {
      width: 14px;
      height: 14px;
    }

    .hero__heading {
      font-size: 2rem;
      letter-spacing: -0.02em;
      line-height: 1.2;
      max-width: 100%;
    }

    .hero__description {
      font-size: 0.875rem;
      line-height: 1.6;
      max-width: 100%;
    }

    .hero__button {
      padding: 0.75rem 1.75rem;
      font-size: 0.875rem;
    }

    .hero__button svg {
      width: 16px;
      height: 16px;
    }

    .hero__cta-note {
      font-size: 0.75rem;
    }
  }

  /* Small Mobile */
  @media screen and (max-width: 375px) {
    .hero__container {
      padding: 1.75rem 1rem;
    }

    .hero__content {
      gap: 1.25rem;
    }

    .hero__badge {
      font-size: 0.6875rem;
      padding: 0.375rem 0.75rem;
    }

    .hero__heading {
      font-size: 1.8rem;
    }

    .hero__description {
      font-size: 0.8125rem;
    }

    .hero__button {
      padding: 0.6875rem 1.5rem;
      font-size: 0.8125rem;
    }

    .hero__button svg {
      width: 14px;
      height: 14px;
    }
  }

  /* Very Small Screens */
  @media screen and (max-width: 320px) {
    .hero__container {
      padding: 1.5rem 0.875rem;
    }

    .hero__content {
      gap: 1rem;
    }

    .hero__badge {
      font-size: 0.625rem;
      padding: 0.3125rem 0.625rem;
    }

    .hero__heading {
      font-size: 1.6rem;
    }

    .hero__description {
      font-size: 0.75rem;
    }

    .hero__button {
      padding: 0.625rem 1.25rem;
      font-size: 0.75rem;
    }

    .hero__button svg {
      width: 14px;
      height: 14px;
    }
  }
</style>

