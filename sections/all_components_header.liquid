<style>
  .all_components_header__wrapper {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 60px 20px 40px;
    font-family: var(--dm-sans-font);
  }

  .all_components_header__content {
    text-align: center;
  }

  .all_components_header__title {
    font-size: 48px;
    font-weight: 700;
    color: var(--color-text);
    margin: 0 0 16px;
    line-height: 1.2;
  }

  .all_components_header__subtitle {
    font-size: 16px;
    font-weight: 400;
    color: var(--color-text-muted);
    margin: 0 auto 24px;
    line-height: 1.6;
    max-width: 800px;
  }

  .all_components_header__stats {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    margin-bottom: 24px;
  }

  .all_components_header__stats_text {
    font-size: 16px;
    font-weight: 600;
    color: var(--color-text);
  }

  .all_components_header__stats_icon {
    width: 24px;
    height: 24px;
  }

  .all_components_header__stats_icon svg {
    width: 24px;
    height: 24px;
    fill: var(--color-brand);
  }

  .all_components_header__features {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 16px;
    flex-wrap: wrap;
  }

  .all_components_header__feature {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
    color: var(--color-text);
  }

  .all_components_header__feature_icon {
    width: 18px;
    height: 18px;
  }

  .all_components_header__feature_icon svg {
    width: 18px;
    height: 18px;
    fill: var(--color-success);
  }

  @media (max-width: 768px) {
    .all_components_header__wrapper {
      padding: 40px 16px 30px;
    }

    .all_components_header__title {
      font-size: 36px;
    }

    .all_components_header__features {
      flex-direction: column;
      gap: 8px;
    }
  }

  @media (max-width: 480px) {
    .all_components_header__title {
      font-size: 28px;
    }
  }
</style>

<div class="all_components_header__wrapper">
  <div class="all_components_header__content">
    {% if section.settings.show_page_title %}
      {% if page.title %}
        <h1 class="all_components_header__title">{{ page.title }}</h1>
      {% else %}
        <h1 class="all_components_header__title">{{ section.settings.page_title }}</h1>
      {% endif %}
    {% endif %}

    {% if section.settings.show_page_description %}
      {% if section.settings.page_description != blank %}
        <p class="all_components_header__subtitle">{{ section.settings.page_description }}</p>
      {% endif %}
    {% endif %}

    {% if section.settings.show_stats %}
      <div class="all_components_header__stats">
        {% if section.settings.stats_icon_desktop != blank %}
          <img
            src="{{ section.settings.stats_icon_desktop | image_url: width: 24 }}"
            alt="Stats icon"
            class="all_components_header__stats_icon"
            width="24"
            height="24"
            loading="lazy">
        {% else %}
          <div class="all_components_header__stats_icon">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}

        <span class="all_components_header__stats_text">{{ section.settings.stats_text }}</span>

        {% if section.settings.stats_icon_desktop != blank %}
          <img
            src="{{ section.settings.stats_icon_desktop | image_url: width: 24 }}"
            alt="Stats icon"
            class="all_components_header__stats_icon"
            width="24"
            height="24"
            loading="lazy">
        {% else %}
          <div class="all_components_header__stats_icon">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
    {% endif %}

    {% if section.settings.show_features %}
      <div class="all_components_header__features">
        {% if section.settings.feature_1_text != blank %}
          <div class="all_components_header__feature">
            {% if section.settings.feature_1_icon_desktop != blank %}
              <img
                src="{{ section.settings.feature_1_icon_desktop | image_url: width: 18 }}"
                alt="{{ section.settings.feature_1_text }}"
                class="all_components_header__feature_icon"
                width="18"
                height="18"
                loading="lazy">
            {% else %}
              <div class="all_components_header__feature_icon">
                {{ 'image' | placeholder_svg_tag }}
              </div>
            {% endif %}
            <span>{{ section.settings.feature_1_text }}</span>
          </div>
        {% endif %}

        {% if section.settings.feature_2_text != blank %}
          <div class="all_components_header__feature">
            {% if section.settings.feature_2_icon_desktop != blank %}
              <img
                src="{{ section.settings.feature_2_icon_desktop | image_url: width: 18 }}"
                alt="{{ section.settings.feature_2_text }}"
                class="all_components_header__feature_icon"
                width="18"
                height="18"
                loading="lazy">
            {% else %}
              <div class="all_components_header__feature_icon">
                {{ 'image' | placeholder_svg_tag }}
              </div>
            {% endif %}
            <span>{{ section.settings.feature_2_text }}</span>
          </div>
        {% endif %}

        {% if section.settings.feature_3_text != blank %}
          <div class="all_components_header__feature">
            {% if section.settings.feature_3_icon_desktop != blank %}
              <img
                src="{{ section.settings.feature_3_icon_desktop | image_url: width: 18 }}"
                alt="{{ section.settings.feature_3_text }}"
                class="all_components_header__feature_icon"
                width="18"
                height="18"
                loading="lazy">
            {% else %}
              <div class="all_components_header__feature_icon">
                {{ 'image' | placeholder_svg_tag }}
              </div>
            {% endif %}
            <span>{{ section.settings.feature_3_text }}</span>
          </div>
        {% endif %}
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
  {
    "name": "All Components Header",
    "tag": "section",
    "class": "all_components_header",
    "settings": [
      {
        "type": "header",
        "content": "Page Header Settings"
      },
      {
        "type": "checkbox",
        "id": "show_page_title",
        "label": "Show Page Title",
        "default": true
      },
      {
        "type": "text",
        "id": "page_title",
        "label": "Page Title",
        "default": "Build Shopify Stores 10x Faster",
        "info": "This will be used if page title is not available"
      },
      {
        "type": "checkbox",
        "id": "show_page_description",
        "label": "Show Page Description",
        "default": true
      }, {
        "type": "textarea",
        "id": "page_description",
        "label": "Page Description",
        "default": "Production-ready Shopify components built on Skeleton theme. Copy, paste, and launch. No setup. No dependencies. Just clean, conversion-optimized code that works instantly."
      }, {
        "type": "header",
        "content": "Statistics Section"
      }, {
        "type": "checkbox",
        "id": "show_stats",
        "label": "Show Statistics",
        "default": true
      }, {
        "type": "text",
        "id": "stats_text",
        "label": "Statistics Text",
        "default": "120+ components across 25+ collections"
      }, {
        "type": "image_picker",
        "id": "stats_icon_desktop",
        "label": "Stats Icon (Desktop)"
      }, {
        "type": "image_picker",
        "id": "stats_icon_mobile",
        "label": "Stats Icon (Mobile)"
      }, {
        "type": "header",
        "content": "Features Section"
      }, {
        "type": "checkbox",
        "id": "show_features",
        "label": "Show Features",
        "default": true
      }, {
        "type": "text",
        "id": "feature_1_text",
        "label": "Feature 1 Text",
        "default": "✓ Zero Config"
      }, {
        "type": "image_picker",
        "id": "feature_1_icon_desktop",
        "label": "Feature 1 Icon (Desktop)"
      }, {
        "type": "image_picker",
        "id": "feature_1_icon_mobile",
        "label": "Feature 1 Icon (Mobile)"
      }, {
        "type": "text",
        "id": "feature_2_text",
        "label": "Feature 2 Text",
        "default": "✓ Copy & Paste Ready"
      }, {
        "type": "image_picker",
        "id": "feature_2_icon_desktop",
        "label": "Feature 2 Icon (Desktop)"
      }, {
        "type": "image_picker",
        "id": "feature_2_icon_mobile",
        "label": "Feature 2 Icon (Mobile)"
      }, {
        "type": "text",
        "id": "feature_3_text",
        "label": "Feature 3 Text",
        "default": "✓ Skeleton Theme Native"
      }, {
        "type": "image_picker",
        "id": "feature_3_icon_desktop",
        "label": "Feature 3 Icon (Desktop)"
      }, {
        "type": "image_picker",
        "id": "feature_3_icon_mobile",
        "label": "Feature 3 Icon (Mobile)"
      }, {
        "type": "header",
        "content": "Colors"
      }, {
        "type": "color",
        "id": "title_color",
        "label": "Title Color",
        "default": "#2d3538"
      }, {
        "type": "color",
        "id": "description_color",
        "label": "Description Color",
        "default": "#666666"
      }
    ],
    "presets": [
      {
        "name": "All Components Header",
        "category": "Custom"
      }
    ]
  }
{% endschema %}