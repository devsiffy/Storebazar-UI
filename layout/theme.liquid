<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    {%- comment -%}
      Font loading:
      - Preconnect to the Shopify font CDN for faster first request
      - Let Shopify load the primary font normally via @font-face
    {%- endcomment -%}
    {% unless settings.type_primary_font.system? %}
      <link
        rel="preconnect"
        href="https://fonts.shopifycdn.com"
        crossorigin>
    {% endunless %}

    {%- render 'meta-tags' -%}
    {%- render 'stylesheets' -%}

    {{ content_for_header }}
  </head>

  <body>
    {%- liquid
      assign hide_header = false
      assign hide_footer = false

      # Add your page handles here
      if page.handle == 'header-v01'
        assign hide_header = true
        assign hide_footer = true
      endif
    -%}

    {%- render 'loading-screen' -%}

    {% unless hide_header %}
      {% sections 'header-group' %}
    {% endunless %}

    {{ content_for_layout }}

    {% unless hide_footer %}
      {% sections 'footer-group' %}
    {% endunless %}
  </body>
</html>