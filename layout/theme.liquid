<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    {%- comment -%}
      Font loading:
      - Preconnect to the Shopify font CDN for faster first request
      - Let Shopify load the primary font normally via @font-face
    {%- endcomment -%}
    {% unless settings.type_primary_font.system? %}
      <link
        rel="preconnect"
        href="https://fonts.shopifycdn.com"
        crossorigin>
    {% endunless %}

    {%- render 'meta-tags' -%}
    {%- render 'stylesheets' -%}

    {{ content_for_header }}
  </head>

  <body>
    {%- render 'loading-screen' -%}

    {% sections 'header-group' %}

    {{ content_for_layout }}

    {% sections 'footer-group' %}
  </body>
</html>